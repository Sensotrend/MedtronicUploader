    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.constraint.Guideline
            android:id="@+id/logo_gl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".25"
            />
        <android.support.constraint.Guideline
            android:id="@+id/logo_gl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".75"
            />
        <info.nightscout.android.utils.TrimmingImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_sensotrend"
            android:scaleType="fitCenter"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/logo_gl_left"
            app:layout_constraintEnd_toEndOf="@id/logo_gl_right"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_sgv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:baselineAligned="true"
        android:gravity="bottom">

        <TextView
            android:id="@+id/textview_bg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dots"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/textview_units"
            app:layout_constraintStart_toStartOf="@+id/textview_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:text="@string/dash"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="70sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/textview_iob"
            app:layout_constraintEnd_toStartOf="@+id/textview_units"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_bg_time" />

        <info.nightscout.android.utils.IconicsAppCompatTextView
            android:id="@+id/textview_trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/dash"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textview_bg"
            app:layout_constraintEnd_toEndOf="@+id/textview_units"
            app:layout_constraintStart_toStartOf="@+id/textview_units"
            app:layout_constraintTop_toTopOf="@+id/textview_bg"
            app:layout_constraintVertical_bias="0.6" />

        <TextView
            android:id="@+id/textview_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/glucose_mgdl"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBottom_toBottomOf="@+id/textview_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_bg" />

        <TextView
            android:id="@+id/textview_iob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_screen__active_insulin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textview_bg_time"
            app:layout_constraintStart_toStartOf="@+id/textview_bg_time"
            app:layout_constraintTop_toBottomOf="@+id/textview_bg" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        >

        <ImageView
            android:id="@+id/cloud_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud"
            android:tint="@color/enabled_icon"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/check_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:paddingTop="4dp"
            app:layout_constraintTop_toTopOf="@id/cloud_icon"
            app:layout_constraintBottom_toBottomOf="@id/cloud_icon"
            app:layout_constraintStart_toStartOf="@id/cloud_icon"
            app:layout_constraintEnd_toEndOf="@id/cloud_icon"
            android:tint="#4b4"
            />

        <ImageView
            android:id="@+id/upload_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signal"
            android:tint="@color/enabled_icon"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cloud_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/pump_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pump"
            tools:tint="@color/enabled_icon"
            app:layout_constraintTop_toBottomOf="@id/cloud_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/device_icon"
            app:layout_constraintHorizontal_chainStyle="packed"
            />

        <ImageView
            android:id="@+id/device_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_device_anim"
            app:layout_constraintEnd_toStartOf="@id/meter_icon"
            app:layout_constraintStart_toEndOf="@id/pump_icon"
            app:layout_constraintTop_toTopOf="@id/pump_icon"
            app:layout_constraintBottom_toBottomOf="@id/pump_icon"
            />

        <ImageView
            android:id="@+id/meter_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_contour"
            tools:tint="@color/enabled_icon"
            app:layout_constraintTop_toBottomOf="@id/cloud_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/device_icon"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <info.nightscout.android.medtronic.ChartSgv
            android:id="@+id/chart"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="333:100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/log_spacer"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    <TextView
        android:id="@+id/log_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="?selectableItemBackground"
        android:textSize="18sp"
        android:text="Log"
        />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/log_container"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:visibility="gone"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:minHeight="1px"
            android:background="#2888"
            android:layout_gravity="top"
            />

        <co.moonmonkeylabs.realmrecyclerview.RealmRecyclerView
            android:saveEnabled="false"
            android:id="@+id/recyclerview_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rrvLayoutType="LinearLayout"
            app:rrvSwipeToDelete="false" />

        <android.support.design.widget.FloatingActionButton
            android:saveEnabled="false"
            android:id="@+id/fab_log_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_menu_revert"
            android:visibility="gone"
            app:backgroundTint="#40000000"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:saveEnabled="false"
            android:id="@+id/fab_log_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_menu_search"
            android:visibility="gone"
            app:backgroundTint="#40000000"
            app:fabSize="mini" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>